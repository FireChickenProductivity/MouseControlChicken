mode: user.mouse_control_chicken_scroll_mode
-
reverse|rev|verse: user.mouse_control_chicken_reverse_scrolling()
stop: user.mouse_control_chicken_stop_scrolling()

[speed] <number_small>: user.mouse_control_chicken_set_scrolling_speed(number_small)
half: user.mouse_control_chicken_multiply_scrolling_speed(0.5)
double: user.mouse_control_chicken_multiply_scrolling_speed(2)
slow: user.mouse_control_chicken_set_scrolling_speed(1)